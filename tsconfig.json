{
  "compilerOptions": {
    "baseUrl": ".",
    "removeComments": false,
    "inlineSources": false,
    "outDir": "dist",
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "node_modules",
    "dist",
    "jest"
  ]
}
